<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.ias5.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_purple">

        <Button
            android:id="@+id/b1"
            style="@style/button_style"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_above="@+id/b2"
            android:layout_alignLeft="@+id/b2"
            android:layout_alignStart="@+id/b2"
            android:layout_column="0"
            android:layout_marginBottom="23dp"
            android:layout_row="0"

            android:text="BASIC"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b2"
            style="@style/button_style"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_above="@+id/b3"
            android:layout_alignLeft="@+id/b3"
            android:layout_alignStart="@+id/b3"
            android:layout_column="0"
            android:layout_marginBottom="27dp"
            android:layout_row="2"
            android:text="BOOKS"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b3"
            style="@style/button_style"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_column="0"
            android:layout_marginBottom="64dp"
            android:layout_row="1"
            android:text="MOTIVATION"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
